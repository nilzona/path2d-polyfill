{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "prefer-destructuring": ["error", {
      "AssignmentExpression": {
        "array": false
      }
    }]
  }
}
