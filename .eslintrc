{
  "extends": "eslint:recommended",
  "env": {
    "commonjs": true,
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "eqeqeq": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "no-param-reassign": ["error"]
  }
}
